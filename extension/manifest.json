{
  "manifest_version": 3,
  "name": "Opinion HUD",
  "version": "1.1.0",
  "description": "Discover prediction markets on Opinion while browsing X. Match tweets to markets and open the trade page in one click.",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": ["storage", "alarms"],
  "host_permissions": [
    "https://opinionhud.xyz/*",
    "https://api.opinionhud.xyz/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*"],
      "js": ["matcher.js", "contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*.png", "assets/*.jpg"],
      "matches": ["https://x.com/*"]
    }
  ],
  "options_page": "options.html"
}
