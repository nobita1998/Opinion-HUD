{
  "manifest_version": 3,
  "name": "Opinion HUD",
  "version": "0.1.0",
  "description": "Contextual Trading Layer for X, powered by Opinion.",
  "permissions": ["storage", "alarms"],
  "host_permissions": ["https://nobita1998.github.io/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html"
}

