{
  "manifest_version": 3,
  "name": "Opinion HUD",
  "version": "1.0.0",
  "description": "Discover prediction markets on Opinion while browsing X. Match tweets to markets and open the trade page in one click.",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": ["storage", "alarms"],
  "host_permissions": ["https://nobita1998.github.io/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html"
}
